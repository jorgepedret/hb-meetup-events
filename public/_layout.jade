    meta(name="msapplication-TileImage" content="/mstile-144x144.png")

    link(type="text/css", rel="stylesheet", href="/css/main.css")
  body
    .wrapper
      .container
        .branding
          a.logo(href="/")
            != partial("_partials/logo")
        .content
          != yield
        .footer
          a(href="/past-events") Past events
          |  &middot;  
          a(href="#{ meetup_url }") Join us on Meetup.com
          |  &middot;  
          a(href="#{ twitter_url }") Twitter
          |  &middot;  
          a(href="/call-for-speakers") Speaker Submission
          br
          small Powered by <a href="http://harpjs.com/">Harp.js</a>
    include _partials/analytics